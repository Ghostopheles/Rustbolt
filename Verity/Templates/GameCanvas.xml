<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

    <Texture name="VerityGameTileTemplate" mixin="VerityGameTileMixin" enableMouse="true"
        virtual="true">
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnMouseDown method="OnMouseDown" />
            <OnMouseUp method="OnMouseUp" />
            <OnEnter method="OnEnter" />
            <OnLeave method="OnLeave" />
        </Scripts>
    </Texture>

    <Frame name="VerityGameCanvasTemplate" mixin="VerityGameCanvasMixin" clipChildren="true"
        flattenRenderLayers="true"
        virtual="true">

        <Layers>
            <Layer level="OVERLAY">
                <Texture parentKey="TileHighlight" atlas="bags-glow-white" />
            </Layer>
        </Layers>

        <Anchors>
            <Anchor point="TOPLEFT" x="5" y="-5" />
            <Anchor point="BOTTOMRIGHT" y="5" />
        </Anchors>

        <Scripts>
            <OnLoad method="OnLoad" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
        </Scripts>
    </Frame>

</Ui>