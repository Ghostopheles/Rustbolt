<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

    <Frame name="RustboltStartScreenTemplate"
        mixin="RustboltStartScreenMixin" setAllPoints="true" virtual="true">
        <Anchors>
            <Anchor point="TOPLEFT" x="5" y="-5" />
            <Anchor point="BOTTOMRIGHT" y="5" />
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="Title" font="Game48FontShadow">
                    <Anchors>
                        <Anchor point="TOP" y="-50" />
                    </Anchors>
                </FontString>
                <FontString parentKey="BouncingText" font="Game32Font">
                    <Anchors>
                        <Anchor point="CENTER" y="150" />
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" />
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="ButtonStack">
                <Size x="300" />
                <Anchors>
                    <Anchor point="TOP" relativePoint="CENTER" y="-50" />
                    <Anchor point="BOTTOM" y="50" />
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString parentKey="Author" font="Game18Font">
                            <Anchors>
                                <Anchor point="BOTTOM" y="25" />
                            </Anchors>
                        </FontString>
                        <FontString parentKey="Version" font="Game20Font">
                            <Anchors>
                                <Anchor point="BOTTOM" relativeKey="$parent.Author"
                                    relativePoint="TOP" y="10" />
                            </Anchors>
                        </FontString>
                    </Layer>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" />
                    </Layer>
                </Layers>
                <Frames>
                    <Button parentKey="StartButton" inherits="SharedGoldRedButtonLargeTemplate">
                        <Size x="200" y="40" />
                        <Anchors>
                            <Anchor point="TOP" y="-25" />
                        </Anchors>
                    </Button>
                    <Button parentKey="LoadButton" inherits="SharedButtonTemplate">
                        <Size x="165" y="30" />
                        <Anchors>
                            <Anchor point="TOP" relativeKey="$parent.StartButton"
                                relativePoint="BOTTOM"
                                y="-10" />
                        </Anchors>
                    </Button>
                    <Button parentKey="SettingsButton" inherits="SharedButtonTemplate">
                        <Size x="165" y="30" />
                        <Anchors>
                            <Anchor point="TOP" relativeKey="$parent.LoadButton"
                                relativePoint="BOTTOM"
                                y="-10" />
                        </Anchors>
                    </Button>
                    <Button parentKey="HelpButton" inherits="SharedButtonTemplate">
                        <Size x="165" y="30" />
                        <Anchors>
                            <Anchor point="TOP" relativeKey="$parent.SettingsButton"
                                relativePoint="BOTTOM"
                                y="-10" />
                        </Anchors>
                    </Button>
                    <Button parentKey="CreditsButton" inherits="SharedButtonTemplate">
                        <Size x="165" y="30" />
                        <Anchors>
                            <Anchor point="TOP" relativeKey="$parent.HelpButton"
                                relativePoint="BOTTOM"
                                y="-10" />
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad method="OnLoad" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
        </Scripts>
    </Frame>

</Ui>